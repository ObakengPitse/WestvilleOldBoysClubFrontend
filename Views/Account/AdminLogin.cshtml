@{
    ViewData["Title"] = "AdminLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container min-vh-100 d-flex justify-content-center align-items-center">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden w-100" style="max-width: 900px;">
        <div class="row g-0 flex-column flex-md-row">
            <!-- Left Panel (Login Form) -->
            <div class="col-md-6 bg-white d-flex flex-column justify-content-center p-4 p-md-5">
                <h3 class="fw-bold text-center mb-4">Admin Log in</h3>

                <div class="d-flex justify-content-center mb-3 gap-2">
                    <button class="btn btn-outline-secondary"><i class="fab fa-facebook-f"></i></button>
                    <button class="btn btn-outline-secondary"><i class="fab fa-google-plus-g"></i></button>
                    <button class="btn btn-outline-secondary"><i class="fab fa-linkedin-in"></i></button>
                </div>

                <p class="text-center small text-muted mb-3">or use your account</p>

                <form id="loginForm" class="mx-auto w-100" style="max-width: 320px;">
                    <div class="mb-3">
                        <input id="email" type="email" class="form-control" placeholder="Email" required />
                    </div>
                    <div class="mb-3">
                        <input id="password" type="password" class="form-control" placeholder="Password" required />
                    </div>
                    <div class="text-end mb-3">
                        <a href="#" class="text-muted small">Forgot your password?</a>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn w-100 text-white fw-semibold rounded-pill" style="background-color:#0d3b66;">LOG IN</button>
                    </div>
                </form>

                <div id="loginMessage" class="text-center mt-3 fw-semibold"></div>
            </div>

            <!-- Right Panel -->
            <div class="col-md-6 d-flex flex-column justify-content-center align-items-center text-center p-4 p-md-5" style="background-color:#0d3b66;">
                <h2 class="fw-bold mb-3 text-white">Hello, Admin!</h2>
         
                <p class="mb-4 text-light small px-3">
                    Want to switch to a regular user account? Use the button below to log in as a user.
                </p>

                <a asp-controller="Account" asp-action="Login"
                   class="btn btn-light btn-lg rounded-pill d-flex align-items-center justify-content-center px-4 py-2 shadow-sm transition-hover">
                    User Login
                    <i class="fas fa-arrow-right ms-2"></i>
                </a>

                <div class="mt-5 text-light small opacity-75">
                    <i class="fas fa-user"></i> Switch easily between admin and user accounts
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/adminLogin.js"></script>
}