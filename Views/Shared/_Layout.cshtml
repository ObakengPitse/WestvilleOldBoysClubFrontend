<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Westville Old Boys Club</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    @{
        // Determine current controller and action for conditional rendering
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();

        bool hideNavbar = currentController == "Account" &&
        (currentAction == "Login" || currentAction == "Register" || currentAction == "AdminLogin");
    }

    @if (!hideNavbar)
    {
        <!-- Navigation -->
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-white" asp-controller="Home" asp-action="Index">
                    Westville Old Boys Club
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon text-white"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav align-items-center">
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item admin-link"><a class="nav-link text-white" asp-controller="Admin" asp-action="Index">Admin</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Schedule" asp-action="Index">Schedule</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Stats" asp-action="Index">Statistics</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Restaurant" asp-action="Index">Restaurant</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Customer" asp-action="Index">Customer</a></li>

                        <!-- Logout button -->
                        <li class="nav-item ms-3">
                            <button id="logoutBtn" class="btn btn-outline-light btn-sm d-none">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    }

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/auth.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
